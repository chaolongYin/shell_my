function print_usage(){
echo Usage!!
echo =================================================================
echo command ----------------:-----meaning
echo $0 n_pre ------------:-----new build preloader
echo $0 r_pre ------------:-----build preloader just modify file
echo $0 n_kernel ---------:-----new build kernel
echo $0 r_kernel ---------:-----build kernl just modifify file
